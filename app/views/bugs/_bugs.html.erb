
<table>
<thead>
<th >Title</th>
<th>Description</th>
<th>Deadline</th>
<th colspan = "3" >Action</th>
</thead>
<tbody>
 <% @project.bugs.each do |bug| %>
  <tr>
  <td><%=bug.title%></td>
  <td><%=bug.discription%></td>
  <td><%=bug.deadline%></td>
  <td><%= link_to 'show', project_bug_path(@project,bug)%> </td>
  <% if can? :edit, Bug%>
    <td><%= link_to 'edit', edit_project_bug_path(@project,bug) %> </td>
  <%end%>
  <% if can? :create, Bug%>
    <td><%= link_to 'Delete', project_bug_path(@project,bug), method: :delete, data: {confirm: "Are you sure?"}%>
    </td>
  <%end%>
  </tr>
<% end %>
</tbody>
</table>
<p>
<%= link_to 'Home', root_path%></p>
</p>