<table>
<thead>
<th >Title</th>
<th>Description</th>
<th colspan = "3" >Action</th>
</thead>
<tbody>
<%if !@projects.nil?%>
  <% @projects.each do |project| %>
    <tr>
    <td><%=project.title%></td>
    <td><%=project.description%></td>
    <td><%= link_to 'show', project_path(project)%> </td>
    <% if can? :edit, project %>
      <td><%= link_to 'edit', edit_project_path(project) %> </td>
    <%end%>
    <% if can? :destroy, project %>
      <td><%= link_to 'Delete', project_path(project), method: :delete, data: {confirm: "Are you sure?"}%>
      </td>
    <%end%>
    </tr>
  <% end %>
<%end%>
</tbody>
</table>
<p>
<%= link_to 'Home', root_path%></p>
</p>